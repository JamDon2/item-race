{
  "name": "item-race",
  "version": "1.0.0",
  "private": true,
  "watch": {
    "dev": "src/**/*.*"
  },
  "scripts": {
    "prebuild": "yon run clean",
    "build": "cross-var tstl --outDir dist/$npm_package_name_$npm_package_version",
    "postbuild": "cd src && cross-var copyfiles **/*.* -e **/*.ts ../dist/$npm_package_name_$npm_package_version && cd ../dist && cross-var bestzip $npm_package_name_$npm_package_version.zip $npm_package_name_$npm_package_version",
    "predev": "yon run clean",
    "dev": "cross-var tstl --outDir $DEV_PATH",
    "postdev": "cd src && cross-var copyfiles **/*.* -e **/*.ts $DEV_PATH",
    "clean": "rimraf dist && cross-var rimraf $DEV_PATH",
    "watch": "npm-watch",
    "test": "node -e (console.log(process.env))"
  },
  "author": "JamDon2",
  "license": "GNU GPLv3",
  "devDependencies": {
    "bestzip": "^2.2.1",
    "copyfiles": "^2.4.1",
    "cross-var": "^1.1.0",
    "npm-watch": "^0.11.0",
    "rimraf": "^3.0.2",
    "typescript-to-lua": "^1.7.1",
    "yarn-or-npm": "^3.0.1"
  },
  "dependencies": {
    "typed-factorio": "^1.4.0"
  }
}